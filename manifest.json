{
    "name": "Hermes",
    "version": "0.1.0",
    "description": "A social media private message encryption tool.",
    "permissions": [
      "storage",
      "webRequest",
      "webRequestBlocking",
      "*://twitter.com/"
    ],
    "background": {
        "scripts": [
          "cryptobundle.js",
          "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
          "matches": ["*://twitter.com/*"],
          "js": [
            "cryptobundle.js",
            "twitter.js"
          ],
          "run_at": "document_start"
        }
     ],
    "manifest_version": 2
}
